<Page
    x:Class="Data_Binding.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Data_Binding"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:/Assets/Ski_Resort.JPG"/>
        </Grid.Background>

        <TextBox x:Name="OutputTextBox" Text="{Binding}" IsReadOnly="True"
                 TextWrapping="Wrap" AcceptsReturn="True" Margin="156,94,597,589" />

        <ListBox x:Name="OutputList" ItemsSource="{Binding}" HorizontalAlignment="Left" 
                 Height="207" VerticalAlignment="Top" Width="613" Margin="156,252,0,0"/>
    </Grid>
</Page>
