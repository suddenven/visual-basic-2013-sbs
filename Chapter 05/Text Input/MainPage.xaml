<Page
    x:Class="Text_Input.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Text_Input"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="InputString" ScrollViewer.VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left" Height="123" Margin="215,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="379" IsSpellCheckEnabled="True" AcceptsReturn="True"/>
        <TextBox x:Name="Output" HorizontalAlignment="Left" Height="46" Margin="215,174,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="379"/>
        <Button x:Name="TestButton" Content="Click to Test" HorizontalAlignment="Left" Height="47" Margin="212,263,0,0" VerticalAlignment="Top" Width="123"/>

    </Grid>
</Page>
