<Page
    x:Class="Array_Input.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Array_Input"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <TextBlock x:Name="Directions" HorizontalAlignment="Left" Height="34" Margin="22,27,0,0" TextWrapping="Wrap" Text="Enter 7 temperatures (one at at time)" VerticalAlignment="Top" Width="362" FontSize="16"/>
        <TextBox x:Name="TempInput" HorizontalAlignment="Left" Height="49" Margin="38,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="65"/>
        <Button x:Name="AddButton" Content="Add Temp to Array" HorizontalAlignment="Left" Height="61" Margin="38,140,0,0" VerticalAlignment="Top" Width="166"/>
        <Button x:Name="DisplayButton" Content="Display Array" HorizontalAlignment="Left" Height="61" Margin="38,216,0,0" VerticalAlignment="Top" Width="166"/>
        <TextBox x:Name="TempOutput" HorizontalAlignment="Left" Height="248" Margin="254,66,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257"/>
    
    </Grid>
</Page>
